<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:alignItems="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgbuttonbackevdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_arrow_back_33" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="Event Detail"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/id_20sp" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout8"
        android:layout_width="367dp"
        android:layout_height="233dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:flexDirection="column"
        app:justifyContent="space_between"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView26">

        <TextView
            android:id="@+id/textView62"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elegance in the Shadows"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/id_20sp"
            android:textStyle="bold" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:alignItems="center"

            >

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_watch_later_24" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18 : 00 - 21 : 00 WIB"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/def_16" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:alignItems="center">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_location_on_24" />

            <TextView
                android:id="@+id/textView68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wanderlust Invocation"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/def_16" />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/textView69"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/id_20sp" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/new_set_tags"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:alignItems="center"
                    app:flexDirection="column"
                    app:justifyContent="center">

                    <TextView
                        android:id="@+id/textView70"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:text="19 Dec"
                        android:textAlignment="center"
                        android:textColor="@color/purple_white"
                        android:textSize="@dimen/def_16" />

                    <TextView
                        android:id="@+id/textView71"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textColor="@color/purple_white"
                        android:textSize="@dimen/def_16" />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corners_img"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:alignItems="center"
                    app:flexDirection="column"
                    app:justifyContent="center">

                    <TextView
                        android:id="@+id/textView72"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:text="20 Dec"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />

                    <TextView
                        android:id="@+id/textView73"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corners_img"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:alignItems="center"
                    app:flexDirection="column"
                    app:justifyContent="center">

                    <TextView
                        android:id="@+id/textView74"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:text="21 Dec"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />

                    <TextView
                        android:id="@+id/textView75"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corners_img"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:alignItems="center"
                    app:flexDirection="column"
                    app:justifyContent="center">

                    <TextView
                        android:id="@+id/textView76"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:text="22 Dec"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />

                    <TextView
                        android:id="@+id/textView77"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corners_img"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:alignItems="center"
                    app:flexDirection="column"
                    app:justifyContent="center">

                    <TextView
                        android:id="@+id/textView78"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:text="19 Dec"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />

                    <TextView
                        android:id="@+id/textView79"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/def_16" />
                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>


        </HorizontalScrollView>

    </com.google.android.flexbox.FlexboxLayout>

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexboxLayout3"
        app:srcCompat="@drawable/apalah" />

    <Button
        android:id="@+id/button5"
        android:layout_width="219dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/new_set_tags"
        android:text="Join Event"
        android:textColor="@color/purple_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexboxLayout8"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>